@page
@model VralumGlassWeb.Pages.SupportModel
@{
    ViewData["Title"] = "Customer";
}

<h1>Customer</h1>
<p>
    Please fill out the form with your personal data.
</p>

<form method="POST">
    <input type="hidden" asp-for="Customer.CustomerId" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Customer.Name"></label>
            <input type="text" class="form-control" asp-for="Customer.Name">
            <span asp-validation-for="Customer.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Customer.Surname">Last Name</label>
            <input type="text" class="form-control" asp-for="Customer.Surname">
            <span asp-validation-for="Customer.Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Customer.Identity"></label>
            <input type="text" class="form-control" asp-for="Customer.Identity">
            <span asp-validation-for="Customer.Identity" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Customer.Age">Age</label>
            <input type="text" class="form-control" asp-for="Customer.Age">
            <span asp-validation-for="Customer.Age" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Customer.Email">Email</label>
            <input type="email" class="form-control" asp-for="Customer.Email">
            <span asp-validation-for="Customer.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">       
        <div class="form-group col-md-3">
            <label asp-for="Customer.City">City</label>
            <input asp-for="Customer.City" type="text" class="form-control" readonly="">
            <span asp-validation-for="Customer.City" class="text-danger"></span>
        </div>
        <div class="form-group col-md-7">
            <label asp-for="Customer.Address">Address</label>
            <input asp-for="Customer.Address" type="text" class="form-control" readonly="">
            <span asp-validation-for="Customer.Address" class="text-danger"></span>
        </div>
        <div class="form-group col-md-1">
            <label asp-for="Customer.Building">Building</label>
            <input asp-for="Customer.Building" type="text" class="form-control" readonly="">
            <span asp-validation-for="Customer.Building" class="text-danger"></span>
        </div>
        <div class="form-group col-md-1">
            <label asp-for="Customer.Apartment"></label>
            <input asp-for="Customer.Apartment" type="text" class="form-control" readonly="">
            <span asp-validation-for="Customer.Apartment" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">

        <div class="form-group col-md-3">
            <label asp-for="Customer.PersonsAtHome">Persons At Home</label>
            <select class="form-control" asp-for="Customer.PersonsAtHome">
                <option selected>Choose...</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
            <span asp-validation-for="Customer.PersonsAtHome" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Customer.KeyReceived">Key Received</label>
            <input type="date" class="form-control" min="2019-01-01" value="2019-01-31" asp-for="Customer.KeyReceived">
            <span asp-validation-for="Customer.KeyReceived" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">

        <div class="form-group col-md-6">
            <label asp-for="Customer.ProjectName">Project Entrepreneur</label>
            <input type="text" class="form-control" asp-for="Customer.ProjectName">
            <span asp-validation-for="Customer.ProjectName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Customer.Constructor">Constructor</label>
            <input type="text" class="form-control" asp-for="Customer.Constructor">
            <span asp-validation-for="Customer.Constructor" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck" asp-for="Customer.Subscribed">
            <label class="form-check-label" for="gridCheck">
                Subscription
            </label>
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Sign up"/>
</form>

