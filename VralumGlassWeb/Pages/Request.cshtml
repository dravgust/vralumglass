@page
@model VralumGlassWeb.Pages.RequestModel

@{
    ViewData["Title"] = "Defect Form";
}

<h1>Defects Form</h1>
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="All"></div>
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="FileUpload.CustomerId" />
            <div class="form-group">
                <label asp-for="FileUpload.Description"></label>
                <textarea rows="6" cols="50" asp-for="FileUpload.Description" type="text" class="form-control"></textarea>
                <span asp-validation-for="FileUpload.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="FileUpload.UploadPhoto" type="file" class="form-control" style="height: auto" />
                <span asp-validation-for="FileUpload.UploadPhoto" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-primary" value="Send Defect"/>
        </form>
    </div>
</div>


